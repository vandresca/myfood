<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:paddingStart="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemViewEL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:clickable="true">
        <TextView
            android:id="@+id/tvEPName"
            android:layout_width="136dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:paddingStart="5dp"
            android:text="Item 1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvEPDays"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEPDays"
            android:layout_width="35dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:text="2"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvEPDaysLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEPDaysLabel"
            android:layout_width="69dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="days"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvEPPrice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEPPrice"
            android:layout_width="63dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="0,00"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvEPCurrency"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEPCurrency"
            android:layout_width="13dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="5dp"
            android:text="â‚¬"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>