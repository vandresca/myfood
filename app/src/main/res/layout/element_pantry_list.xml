<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemViewPL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btnDeletePP"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

    <ImageButton
        android:id="@+id/btnUpdatePP"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_baseline_edit_note_24" />

    <TextView
        android:id="@+id/tvPPName"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:maxLength="28"
        android:text="Orégano seco molido"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPPQuantity"
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPPQuantityUnit"
        android:layout_width="69dp"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:text="QuantityUnit"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPPPrice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="12,20"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPPCurrency"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="€"
        android:textSize="16sp" />
</LinearLayout>